<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="5" author="loziukvika10@gmail.com">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>

        <sql>
            CREATE EXTENSION IF NOT EXISTS "pgcrypto";
        </sql>
        <createTable tableName="driver">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_driver"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="driver"/>
        </rollback>
    </changeSet>
    <changeSet id="6" author="loziukvika10@gmail.com">
        <addUniqueConstraint columnNames="email" constraintName="uc_driver_email" tableName="driver"/>
        <rollback>
            <dropUniqueConstraint constraintName="uc_driver_email" tableName="driver"/>
        </rollback>
    </changeSet>

</databaseChangeLog>